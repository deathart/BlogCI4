{% extends "template.twig" %}
{% block content %}
    <form class="add_page_form">
        <div class="row m-0 p-0">
            <div class="col-md-8">
                <div id="pan_cont">
                    <div class="title">
                        <h2>Information principal</h2>
                    </div>
                    <div class="fin">
                        <div class="row">
                            <div class="col">
                                <div class="form-froup">
                                    <label for="title">Titre :</label>
                                    <input type="text" class="form-control" id="title" />
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-froup">
                                    <label for="link">Lien :</label>
                                    <input type="text" class="form-control" id="link" />
                                </div>
                            </div>
                        </div>
                        <div class="form-froup form-redac">
                            <label for="content">Text :</label>
                            {{ include('page/bbcode.twig') }}
                            <textarea class="form-control" id="content" rows="30"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div id="pan_cont">
                    <div class="title">
                        <h2>Publication</h2>
                    </div>
                    <div class="fin">
                        <div class="form-group row">
                            <label for="options" class="col-sm-3 col-form-label">Page actif</label>
                            <div class="col-sm-9">
                                <label class="btn btn-danger">
                                    <input type="radio" id="options" name="options" value="0" autocomplete="off" checked="checked"> Non
                                </label>
                                <label class="btn btn-success">
                                    <input type="radio" id="options" name="options" value="1" autocomplete="off"> Oui
                                </label>
                            </div>
                        </div>
                        <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                            <button type="submit" class="btn btn-outline-success" data-type="1">Sauvegarder</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}