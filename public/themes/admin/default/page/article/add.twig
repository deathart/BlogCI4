{% extends "template.twig" %}
{% block content %}
    <form class="add_article_form">
        <div class="row m-0 p-0">
            <div class="col-md-8">
                <div id="pan_cont">
                    <div class="title">
                        <h2>Information principal</h2>
                    </div>
                    <div class="fin">
                        <div class="row">
                            <div class="col">
                                <div class="form-froup">
                                    <label for="title">Titre :</label>
                                    <input type="text" class="form-control" id="title" />
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-froup">
                                    <label for="link">Lien :</label>
                                    <input type="text" class="form-control" id="link" />
                                </div>
                            </div>
                        </div>
                        <div class="form-froup form-redac">
                            <label for="content">Text :</label>
                            <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                                <div class="btn-group mr-2" role="group" aria-label="Primary">
                                    <button type="button" class="btn btn-secondary" data-type="bold"><i class="fa fa-bold" aria-hidden="true"></i></button>
                                    <button type="button" class="btn btn-secondary" data-type="italic"><i class="fa fa-italic" aria-hidden="true"></i></button>
                                    <button type="button" class="btn btn-secondary" data-type="del"><i class="fa fa-strikethrough" aria-hidden="true"></i></button>
                                    <button type="button" class="btn btn-secondary" data-type="underline"><i class="fa fa-underline" aria-hidden="true"></i></button>
                                </div>
                                <div class="btn-group mr-2" role="group" aria-label="Font">
                                    <div class="btn-group" role="group">
                                        <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fa fa-header" aria-hidden="true"></i>
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                            <button class="dropdown-item" type="button" data-type="header" data-header="h1"><h1>H1</h1></button>
                                            <button class="dropdown-item" type="button" data-type="header" data-header="h2"><h2>H2</h2></button>
                                            <button class="dropdown-item" type="button" data-type="header" data-header="h3"><h3>H3</h3></button>
                                            <button class="dropdown-item" type="button" data-type="header" data-header="h4"><h4>H4</h4></button>
                                            <button class="dropdown-item" type="button" data-type="header" data-header="h5"><h5>H5</h5></button>
                                            <button class="dropdown-item" type="button" data-type="header" data-header="h6"><h6>H6</h6></button>
                                        </div>
                                    </div>
                                    <input type="text" id="mycp" data-type="color" />
                                </div>
                                <div class="btn-group mr-2" role="group" aria-label="align">
                                    <button type="button" class="btn btn-secondary" data-type="align" data-align="left"><i class="fa fa-align-left" aria-hidden="true"></i></button>
                                    <button type="button" class="btn btn-secondary" data-type="align" data-align="center"><i class="fa fa-align-center" aria-hidden="true"></i></button>
                                    <button type="button" class="btn btn-secondary" data-type="align" data-align="right"><i class="fa fa-align-right" aria-hidden="true"></i></button>
                                </div>
                                <div class="btn-group mr-2" role="group" aria-label="Link">
                                    <button type="button" class="btn btn-secondary" data-type="link"><i class="fa fa-link" aria-hidden="true"></i></button>
                                </div>
                                <div class="btn-group mr-2" role="group" aria-label="Code">
                                    <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-code" aria-hidden="true"></i>
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                        <button class="dropdown-item" type="button" data-type="code" data-code="php">PHP</button>
                                        <button class="dropdown-item" type="button" data-type="code" data-code="css">CSS</button>
                                        <button class="dropdown-item" type="button" data-type="code" data-code="html">HTML</button>
                                        <button class="dropdown-item" type="button" data-type="code" data-code="javascript">JavaScript</button>
                                        <button class="dropdown-item" type="button" data-type="code" data-code="sql">SQL</button>
                                    </div>
                                </div>
                                <div class="btn-group mr-2" role="group" aria-label="Media">
                                    <button type="button" class="btn btn-secondary" data-type="media"><i class="fa fa-picture-o" aria-hidden="true"></i></button>
                                </div>
                                <div class="btn-group mr-2" role="group" aria-label="Source">
                                    <button type="button" class="btn btn-secondary" data-type="source">Source</button>
                                </div>
                            </div>
                            <textarea class="form-control" id="content" rows="30"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div id="pan_cont">
                    <div class="title">
                        <h2>Publication</h2>
                    </div>
                    <div class="fin">
                        <button class="btn btn-secondary" type="submit">Envoyer à la correction</button>
                    </div>
                </div>
                <div id="pan_cont">
                    <div class="title">
                        <h2>Information Secondaire</h2>
                    </div>
                    <div class="fin">
                        <div class="form-group row">
                            <label for="options" class="col-sm-3 col-form-label">Important</label>
                            <div class="col-sm-9">
                                <label class="btn btn-danger">
                                    <input type="radio" id="options" name="options" value="0" autocomplete="off" checked> Non
                                </label>
                                <label class="btn btn-success">
                                    <input type="radio" id="options" name="options" value="1" autocomplete="off"> Oui
                                </label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="wordkey" class="col-sm-3 col-form-label">Mots clefs</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="wordkey" placeholder="Mots clefs">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="cat" class="col-sm-3 col-form-label">Catégorie</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="cat" multiple>
                                    {% for data in getcat %}
                                        <option value="{{ data.id }}">{{ data.title }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="pic" class="col-sm-3 col-form-label">Image à la une (lien)</label>
                            <div class="col-sm-9">
                                <span class="btn btn-secondary add_picture_one">Modifié l'image à la une</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}