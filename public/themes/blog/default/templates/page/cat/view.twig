{% extends "layout.twig" %}
{% block content %}
    <div class="menu_right home">
        <div class="bloc">
            <div class="title">
                <h1>{{ info_cat.title }}</h1>
            </div>
            <div class="content">
                {{ info_cat.description }}
            </div>
        </div>
        {% if 'pub_active'|config == 1 %}
            <div class="bloc" id="pub">
                <div class="title">
                    <h1>{{ trans('cat.menu_right_pub') }}</h1>
                </div>
                <div class="content">
                </div>
            </div>
        {% endif %}
        {{ pager }}
    </div>
    <div class="article_list">
        {% for data in get_all %}
            <div class="article_bloc">
                <div class="images">
                    <a href="{{ ('article/' ~ data.link)|base_url }}"><img style="height: 250px;" src="{{ data.picture_one|base_url }}" /></a>
                    <div class="tags">
                        {{ general('TradCat', data.cat) }}
                    </div>
                </div>
                <div class="info">
                    <div class="publish_date">
                        <i class="far fa-clock" aria-hidden="true"></i> <span>{{ data.date_created }}</span>
                    </div>
                    <div class="coms">
                        <span>{{ general('CountCom', data.id) }}</span> <i class="far fa-comments" aria-hidden="true"></i>
                    </div>
                </div>
                <a href="{{ ('article/' ~ data.link)|base_url }}"><h1>{{ data.title }}</h1></a>
                <div class="content">
                    {{ parse(data.content|slice(0, 200), true) ~ '...' }}
                </div>
                <div class="read_more">
                    <a href="{{ ('article/' ~ data.link)|base_url }}">{{ trans('cat.view_more') }}</a>
                </div>
            </div>
        {% else %}
            <div class="nopost">
                {{ trans('cat.no_article') }}
            </div>
        {% endfor %}
    </div>
{% endblock %}