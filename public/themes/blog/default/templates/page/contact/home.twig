{% extends "layout.twig" %}
{% block content %}
        <div class="page_content">
            <div class="title">
                <h2>{{ trans('contact.title') }}</h2>
            </div>
            <div class="content">
                <div class="message_contact"></div>
                {% if check %}
                    {{ trans('contact.last_contact') }}
                {% else %}
                <form class="contact">
                    <div class="form-group row">
                        <label for="name" class="col-sm-2 col-form-label text-right">{{ trans('contact.form_name') }} : </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="name" placeholder="{{ trans('contact.form_name') }}"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-sm-2 col-form-label text-right">{{ trans('contact.form_email') }} : </label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="email" placeholder="{{ trans('contact.form_email') }}"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-sm-2 col-form-label text-right">{{ trans('contact.form_subject') }} : </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="sujet" placeholder="{{ trans('contact.form_subject') }}"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="msg" class="col-sm-2 col-form-label text-right">{{ trans('contact.form_content') }} : </label>
                        <div class="col-sm-10">
                            <textarea id="msg" class="form-control" rows="10" placeholder="{{ trans('contact.form_content') }}"></textarea>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-theme">{{ trans('contact.form_btn') }}</button>
                    </div>
                </form>
                {% endif %}
            </div>
        </div>
{% endblock %}
