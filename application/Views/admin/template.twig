<!doctype html>
<html lang="fr">
    <head>
        {{ meta }}
        {% for data in css %}
            <link rel="stylesheet" type="text/css" href="{{ data.file }}" />
        {% endfor %}
    </head>
    <body>
        <div class="container-fluid p-0 h-100">
            <div class="row no-gutters h-100">
                <div class="col-md-2 h-100">
                    <div class="left col-md-2 h-100">
						<div class="users">
							<img class="avatar" src="{{ 'assets/images/user.png'|base_url }}" />
							<div class="infos">
								<ul class="list-unstyled">
									<li>Bonjour {{ general('getusername') }}</li>
									<li><a href="{{ 'admin/auth/logout'|base_url }}">Déconnexion</a></li>
								</ul>
							</div>
						</div>
						<div class="menu">
							<div class="home_dash">
								<a href="{{ 'admin'|base_url }}">Dashboard</a> - <a href="{{ ''|base_url }}">Blog</a>
							</div>
							<div id="exampleAccordion" class="link" data-children=".item">
								<div class="item {% if '2'|uri_segment == "article" %}active{% endif %}">
									<a class="title" data-toggle="collapse" data-parent="#exampleAccordion" href="#exampleAccordion1" aria-expanded="{% if '2'|uri_segment == "article" %}true{% endif %}" aria-controls="exampleAccordion1">
										Articles
									</a>
									<div id="exampleAccordion1" class="collapse cont {% if '2'|uri_segment == "article" %}show{% endif %}" role="tabpanel">
										<ul class="list-unstyled">
											<li><a href="{{ 'admin/article'|base_url }}">Liste des articles</a></li>
											<li><a href="{{ 'admin/article/list/2'|base_url }}">Articles en attente de correction</a></li>
											<li><a href="{{ 'admin/article/list/3'|base_url }}">Articles en attente de publication</a></li>
											<li><a href="{{ 'admin/article/add'|base_url }}">Ajouter un article</a></li>
										</ul>
									</div>
								</div>
								<div class="item {% if '2'|uri_segment == "cat" %}active{% endif %}">
									<a class="title" href="{{ 'admin/cat'|base_url }}" aria-expanded="{% if '2'|uri_segment == "cat" %}true{% endif %}" >
										Catégories
									</a>
								</div>
								<div class="item {% if '2'|uri_segment == "comments" %}active{% endif %}">
									<a class="title" data-toggle="collapse" data-parent="#exampleAccordion" href="#exampleAccordion3" aria-expanded="{% if '2'|uri_segment == "comments" %}true{% endif %}" aria-controls="exampleAccordion3">
										Commentaires
									</a>
									<div id="exampleAccordion3" class="collapse cont {% if '2'|uri_segment == "comments" %}show{% endif %}" role="tabpanel">
										<ul class="list-unstyled">
                                            <li><a href="{{ 'admin/comments'|base_url }}">Liste de toute les commentaires</a></li>
                                            <li><a href="{{ 'admin/comments/wait'|base_url }}">Commentaires en attentes de validation</a></li>
											<li><a href="{{ 'admin/comments/ok'|base_url }}">Commentaires validés</a></li>
											<li><a href="{{ 'admin/comments/no'|base_url }}">Commentaires non validés</a></li>
										</ul>
									</div>
								</div>
								<div class="item {% if '2'|uri_segment == "media" %}active{% endif %}">
									<a class="title" data-toggle="collapse" data-parent="#exampleAccordion" href="#exampleAccordion4" aria-expanded="{% if '2'|uri_segment == "media" %}true{% endif %}" aria-controls="exampleAccordion4">
										Médias
									</a>
									<div id="exampleAccordion4" class="collapse cont {% if '2'|uri_segment == "media" %}show{% endif %}" role="tabpanel">
										<ul class="list-unstyled">
											<li><a href="{{ 'admin/media'|base_url }}">Liste des médias</a></li>
											<li><a href="{{ 'admin/media/add'|base_url }}">Ajouter un media</a></li>
										</ul>
									</div>
								</div>
								<div class="item {% if '2'|uri_segment == "users" %}active{% endif %}">
									<a class="title" data-toggle="collapse" data-parent="#exampleAccordion" href="#exampleAccordion6" aria-expanded="{% if '2'|uri_segment == "users" %}true{% endif %}" aria-controls="exampleAccordion6">
										Utilisateurs
									</a>
									<div id="exampleAccordion6" class="collapse cont {% if '2'|uri_segment == "users" %}show{% endif %}" role="tabpanel">
										<ul class="list-unstyled">
											<li><a href="{{ 'admin/users/liste'|base_url }}">Liste</a></li>
											<li><a href="{{ 'admin/users/add'|base_url }}">Créer un utilisateur</a></li>
											<li><a href="{{ 'admin/users/log'|base_url }}">Logs</a></li>
										</ul>
									</div>
								</div>
								<div class="item {% if '2'|uri_segment == "contact" %}active{% endif %}">
									<a class="title" data-toggle="collapse" data-parent="#exampleAccordion" href="#exampleAccordion7" aria-expanded="{% if '2'|uri_segment == "contact" %}true{% endif %}" aria-controls="exampleAccordion7">
										Contact
									</a>
									<div id="exampleAccordion7" class="collapse cont {% if '2'|uri_segment == "contact" %}show{% endif %}" role="tabpanel">
										<ul class="list-unstyled">
											<li><a href="{{ 'admin/contact/new'|base_url }}">Nouveaux</a></li>
											<li><a href="{{ 'admin/contact/finish'|base_url }}">Fini</a></li>
										</ul>
									</div>
								</div>
								<div class="item {% if '2'|uri_segment == "config" %}active{% endif %}">
									<a class="title" data-toggle="collapse" data-parent="#exampleAccordion" href="#exampleAccordion8" aria-expanded="{% if '2'|uri_segment == "config" %}true{% endif %}" aria-controls="exampleAccordion8">
										Configuration
									</a>
									<div id="exampleAccordion8" class="collapse cont {% if '2'|uri_segment == "config" %}show{% endif %}" role="tabpanel">
										<ul class="list-unstyled">
											<li><a href="{{ 'admin/config/params'|base_url }}">Paramêtres</a></li>
											<li><a href="{{ 'admin/config/task'|base_url }}">Tâche</a></li>
											<li><a href="{{ 'admin/config/db'|base_url }}">DB</a></li>
											<li><a href="{{ 'admin/config/cache'|base_url }}">Caches</a></li>
											<li><a href="{{ 'admin/config/log'|base_url }}">Logs</a></li>
										</ul>
									</div>
								</div>
							</div>
						</div>
                    </div>
                </div>
                <div class="col-md-10 h-100 ">
                    <div class="right">
                        <!--<div class="header col-md-10">
                            <a class="title" href="{{ 'admin'|base_url }}">Accueil</a>
							<div class="notifs">Notifications</div>
                        </div>-->
                        <div class="content">
                            <div class="title_page">
                                {{ breadcrumb }}
                            </div>
                            {% block content %}{% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% for data in js %}
            <script type="text/javascript" src="{{ data.file }}"></script>
        {% endfor %}
    </body>
</html>
