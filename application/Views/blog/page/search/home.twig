{% extends "template.twig" %}
{% block content %}
    <div class="page_content">
        <h2>Recherche</h2>
        <hr />
        <form  method="post" action="{{ 'search'|base_url }}">
            <label for="mc">Mots clefs</label>
            <input type="text" id="mc" name="mc_key" value="{{ val_mc }}" />
            <button type="submit" class="btn">Rechercher</button>
        </form>
        {% if val_mc %}
            <hr />
            <div class="tabsnavtitle">
                <button class="tablinks active" data-tabsnav="art">Articles</button>
                <button class="tablinks" data-tabsnav="com">Commentaires</button>
            </div>
            <div class="tabsnavcontent">
                <div id="art" class="tabsc show">
                    {% if search_article %}
                        {% for data in search_article %}
                            {{ data.title }}
                        {% endfor %}
                    {% else %}
                        Aucun article correspondant à votre recherche à été trouvé
                    {% endif %}
                </div>
                <div id="com" class="tabsc">
                    {% if search_com %}
                        {% for data in search_com %}
                            {{ data.content }}
                        {% endfor %}
                    {% else %}
                        Aucun commentaires correspondant à votre recherche à été trouvé
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}