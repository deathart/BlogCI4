{% block bbcode %}
    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group mr-2" role="group" aria-label="Primary">
            <button type="button" class="btn btn-secondary" data-type="bold"><i class="fas fa-bold" aria-hidden="true"></i></button>
            <button type="button" class="btn btn-secondary" data-type="italic"><i class="fas fa-italic" aria-hidden="true"></i></button>
            <button type="button" class="btn btn-secondary" data-type="del"><i class="fas fa-strikethrough" aria-hidden="true"></i></button>
            <button type="button" class="btn btn-secondary" data-type="underline"><i class="fas fa-underline" aria-hidden="true"></i></button>
            <button type="button" class="btn btn-secondary" data-type="quote"><i class="fas fa-quote-right" aria-hidden="true"></i></button>
        </div>
        <div class="btn-group mr-2" role="group" aria-label="Font">
            <div class="btn-group" role="group">
                <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-heading" aria-hidden="true"></i>
                </button>
                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                    <button class="dropdown-item" type="button" data-type="header" data-header="h1"><h1>H1</h1></button>
                    <button class="dropdown-item" type="button" data-type="header" data-header="h2"><h2>H2</h2></button>
                    <button class="dropdown-item" type="button" data-type="header" data-header="h3"><h3>H3</h3></button>
                    <button class="dropdown-item" type="button" data-type="header" data-header="h4"><h4>H4</h4></button>
                    <button class="dropdown-item" type="button" data-type="header" data-header="h5"><h5>H5</h5></button>
                    <button class="dropdown-item" type="button" data-type="header" data-header="h6"><h6>H6</h6></button>
                </div>
            </div>
            <input type="text" id="mycp" data-type="color" />
        </div>
        <div class="btn-group mr-2" role="group" aria-label="align">
            <button type="button" class="btn btn-secondary" data-type="align" data-align="left"><i class="fas fa-align-left" aria-hidden="true"></i></button>
            <button type="button" class="btn btn-secondary" data-type="align" data-align="center"><i class="fas fa-align-center" aria-hidden="true"></i></button>
            <button type="button" class="btn btn-secondary" data-type="align" data-align="right"><i class="fas fa-align-right" aria-hidden="true"></i></button>
        </div>
        <div class="btn-group mr-2" role="group" aria-label="Link">
            <button type="button" class="btn btn-secondary" data-type="link"><i class="fas fa-link" aria-hidden="true"></i></button>
        </div>
        <div class="btn-group mr-2" role="group" aria-label="Code">
            <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-code" aria-hidden="true"></i>
            </button>
            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                <button class="dropdown-item" type="button" data-type="code" data-code="php"><i class="fab fa-php" aria-hidden="true"></i></button>
                <button class="dropdown-item" type="button" data-type="code" data-code="css"><i class="fab fa-css3-alt" aria-hidden="true"></i></button>
                <button class="dropdown-item" type="button" data-type="code" data-code="html"><i class="fab fa-html5" aria-hidden="true"></i></button>
                <button class="dropdown-item" type="button" data-type="code" data-code="javascript"><i class="fab fa-js-square" aria-hidden="true"></i></button>
                <button class="dropdown-item" type="button" data-type="code" data-code="sql"><i class="fas fa-database" aria-hidden="true"></i></button>
            </div>
        </div>
        <div class="btn-group mr-2" role="group" aria-label="Alert">
            <button id="btnGroupDrop2" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Alerte
            </button>
            <div class="dropdown-menu" aria-labelledby="btnGroupDrop2">
                <button class="dropdown-item" type="button" data-type="alert" data-alert="success">Success</button>
                <button class="dropdown-item" type="button" data-type="alert" data-alert="info">Info</button>
                <button class="dropdown-item" type="button" data-type="alert" data-alert="warning">Warning</button>
                <button class="dropdown-item" type="button" data-type="alert" data-alert="danger">Danger</button>
            </div>
        </div>
        <div class="btn-group mr-2" role="group" aria-label="Media">
            <button type="button" class="btn btn-secondary" data-type="media"><i class="fas fa-images" aria-hidden="true"></i></button>
            <button type="button" class="btn btn-secondary" data-type="youtube"><i class="fab fa-youtube" aria-hidden="true"></i></button>
        </div>
        <div class="btn-group mr-2" role="group" aria-label="Source">
            <button type="button" class="btn btn-secondary" data-type="source">Source</button>
        </div>
    </div>
{% endblock %}